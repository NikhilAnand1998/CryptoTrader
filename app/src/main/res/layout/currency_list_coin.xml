<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/coin_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_coin_text"
        android:text="BTC"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@+id/coin_image"
        app:layout_constraintStart_toEndOf="@+id/coin_image"
        android:layout_marginLeft="6dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_coin_div"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toTopOf="@+id/coin_image"
        app:layout_constraintStart_toEndOf="@+id/tv_coin_text"
        android:layout_marginLeft="3dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_coin_name"
        android:text="Bitcoin"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@+id/coin_image"
        app:layout_constraintStart_toEndOf="@+id/tv_coin_div"
        android:layout_marginLeft="6dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_coin_symbol"
        android:text="$"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@+id/coin_image"
        app:layout_constraintStart_toEndOf="@+id/tv_coin_price"
        android:layout_marginLeft="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_coin_price"
        android:text="$"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@+id/coin_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="10dp"
        android:paddingRight="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_one_hour"
        android:text="+/-1"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toEndOf="@+id/coin_image"
        app:layout_constraintTop_toBottomOf="@+id/coin_image"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_24_hour"
        android:text="+/-24"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_one_hour"
        app:layout_constraintTop_toBottomOf="@id/coin_image"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_7_days"
        android:text="+/-7"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_24_hour"
        app:layout_constraintTop_toBottomOf="@id/coin_image"

        />


</android.support.constraint.ConstraintLayout>




</android.support.v7.widget.CardView>